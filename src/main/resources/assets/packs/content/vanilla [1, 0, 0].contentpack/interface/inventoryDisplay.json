{
    "metadata": {
        "identifier": "TranscendRuins:inventoryDisplay"
    },
    "attributes": {
        "style": {
            "#inventoryDisplayList": {

                "listDirection": "horizontal",
                "backgroundColor": [64, 64, 64, 128]

            },
            "inventoryDisplay": {
                "gap": 40,
                "width": "fitContent",
                "x": "50% - 50",
                "origin": ["50%", 0],

                "triggerPhase": "press"
            },
            "inventory": {
                "width": "fitContent",
                "height": "fitContent",

                "textureFit": "contain",
                "color": [255, 255, 255],
                "textAlign": "right",

                "gap": 5,
                "fontSize": 16,
                "lineHeight": 1.4
            },
            "#inventoryDisplayExitButton": {
                "width": 100,
                "height": "100%",
                "fontSize": 28,
                "backgroundColor": [64, 64, 64, 128],
                "color": [160, 160, 160]
            },
            "#inventoryDisplayExitButtonList": {
                "gap": 10
            },
            "#inventoryDisplayExitButton:hover": {
                "backgroundColor": [32, 32, 32, 128]
            },
            "#inventoryDisplayExitButton:active": {
                "backgroundColor": [32, 32, 32, 192]
            },
            "#inventoryDisplayExitButtonX": {
                "x": "50",
                "y": "50",
                "width": 50,
                "height": 50,
                "origin": "50%",
                "textureFit": "contain"
            }
        },

        "body": {
            "type": "list",
            "id": "inventoryDisplayList",
            "classes": [ "menu" ],

            "components": [
                {
                    "type": "inventoryDisplay"
                },

                {
                    "type": "button",
                    "id": "inventoryDisplayExitButton",

                    "component": {
                        "type": "list",
                        "id": "inventoryDisplayExitButtonList",
                        "components": [
                            {
                                "type": "texture",
                                "id": "inventoryDisplayExitButtonX",

                                "texture": "interface.inventoryDisplay.x"
                            },
                            {
                                "type": "rotate",
                                "id": "inventoryDisplayExitButtonText",

                                "angle": 90,
                                "centerX": 70.25,
                                "centerY": 37.75,
                                "component": "CLOSE"
                            }
                        ]
                    },
                    "action": {
                        "type": "closeMenu"
                    }
                }
            ]
        }
    }
}