{
    "metadata": {
        "identifier": "TranscendRuins:actionBar"
    },
    "attributes": {

        "style": {
            "#actionBarContainer": {
                "width": "100%",
                "height": "100%",
                "paddingHorizontal": "5%",
                "paddingVertical": "20px",
                "background": {
                    "color": [150, 150, 150]
                },
                "border": {
                    "style": "solid"
                }
            },

            "#interactButton": {
                "x": 100,
                "y": 200
            },

            "#mainhandButton": {
                "x": 200,
                "y": 200
            },

            "#offhandButton": {
                "x": 0,
                "y": 0
            },

            ".actionButton": {
                "triggerPhase": "press",
                "width": "fitContent",
                "height": "fitContent",

                "border": {
                    "style": "solid",
                    "width": 1,
                    "color": [176, 176, 176, 192]
                },
                "borderRadius": 50,

                "origin": "50%"
            },
            ".actionButton:hover": {
                "borderColor": [80, 200, 220, 192]
            },

            ".actionButtonIcon": {
                "width": 80,
                "height": 80,

                "background": {
                    "color": [96, 96, 96, 96]
                },

                "textureFit": "contain",

                "border": {
                    "width": 5,
                    "style": "solid",
                    "color": [0, 0, 0, 0]
                },

                "borderRadius": 50
            },

            ".actionButtonIcon:hover": {
                "backgroundTextureZ": "interface.actionBar.actionButtonHover"
            },
            ".actionButtonIcon:active": {
                "width": 75,
                "height": 75,

                "backgroundTextureZ": "interface.actionBar.actionButtonActive"
            }
        },

        "body": {
            "type": "container",
            "id": "actionBarContainer",

            "components": [
                {
                    "type": "button",
                    "id": "interactButton",
                    "classes": [ "actionButton" ],

                    "component": {
                        "type": "texture",
                        "id": "interactButtonIcon",
                        "classes": [ "actionButtonIcon" ],

                        "texture": "interface.actionBar.interact"
                    },

                    "action": {
                        "type": "interact"
                    }
                },

                {
                    "type": "button",
                    "id": "mainhandButton",
                    "classes": [ "actionButton" ],

                    "component": {
                        "type": "texture",
                        "id": "mainhandButtonIcon",
                        "classes": [ "actionButtonIcon" ],

                        "texture": {
                            "type": "inventorySlot",
                            "slot": "mainhand"
                        }
                    },

                    "select": 1,
                    "action": []
                },

                {
                    "type": "button",
                    "id": "offhandButton",
                    "classes": [ "actionButton" ],

                    "component": {
                        "type": "texture",
                        "id": "offhandButtonIcon",
                        "classes": [ "actionButtonIcon" ],

                        "texture": {
                            "type": "inventorySlot",
                            "slot": "offhand"
                        }
                    },

                    "select": 1,
                    "action": []
                }
            ]
        }
    }
}