{
    "metadata": {
        "identifier": "TranscendRuins:utilityBar"
    },
    "attributes": {
        "style": {
            "#utilityBarContainer": {
                "x": "100%",
                "y": "100% - 20px",
                "width": 250,
                "height": 60,
                "origin": "100%"
            },
            "#inventoryButton": {
                "backgroundIcon": "interface.utilityBar.backpack"
            },
            "#inventoryButton:hover": {
                "backgroundIcon": "interface.utilityBar.backpackDark"
            },
            ".utilityButton": {
                "triggerPhase": "release",
                "x": 30,
                "y": 30,
                "width": 60,
                "height": 60,
                "origin": [
                    "50%",
                    "50%"
                ]
            },
            ".utilityButton:active": {
                "width": 55,
                "height": 55
            }
        },
        "body": {
            "type": "container",
            "id": "utilityBarContainer",
            "components": [
                {
                    "type": "button",
                    "id": "inventoryButton",
                    "classes": [
                        "utilityButton"
                    ],
                    "action": {
                        "type": "openInventory"
                    }
                }
            ]
        }
    }
}