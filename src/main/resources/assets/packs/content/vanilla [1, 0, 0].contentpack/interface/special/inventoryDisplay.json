{
    "metadata": {
        "identifier": "TranscendRuins:inventoryDisplay"
    },
    "attributes": {
        "style": {
            "#inventoryDisplayList": {
                "listDirection": "horizontal",
                "backgroundColor": "rgb(64, 64, 64, 128)"
            },
            "inventoryDisplay": {
                "gap": 40,
                "width": "fitContent",
                "x": "50% - 50",
                "origin": [
                    "50%",
                    0
                ],
                "marginTop": 10,
                "triggerPhase": "press"
            },
            "inventory": {
                "width": "fitContent",
                "height": "fitContent",
                "iconFit": "contain",
                "color": "rgb(255, 255, 255)",
                "textAlign": "right",
                "gap": 5,
                "fontSize": 16,
                "lineHeight": 1.4
            },
            "#inventoryDisplayExitButton": {
                "width": 100,
                "height": "100%",
                "fontSize": 28,
                "backgroundColor": "rgb(64, 64, 64, 128)",
                "color": "rgb(160, 160, 160)"
            },
            "#inventoryDisplayExitButtonList": {
                "gap": 10
            },
            "#inventoryDisplayExitButton:hover": {
                "backgroundColor": "rgb(32, 32, 32, 128)"
            },
            "#inventoryDisplayExitButton:active": {
                "backgroundColor": "rgb(64, 64, 64, 192)"
            },
            "#inventoryDisplayExitButtonX": {
                "x": "50",
                "y": "50",
                "width": 50,
                "height": 50,
                "origin": "50%",
                "iconFit": "contain"
            }
        },
        "body": {
            "type": "list",
            "id": "inventoryDisplayList",
            "classes": [
                "menu"
            ],
            "components": [
                {
                    "type": "inventoryDisplay",
                    "id": "inventoryDisplay"
                },
                {
                    "type": "button",
                    "id": "inventoryDisplayExitButton",
                    "component": {
                        "type": "list",
                        "id": "inventoryDisplayExitButtonList",
                        "components": [
                            {
                                "type": "icon",
                                "id": "inventoryDisplayExitButtonX",
                                "icon": "interface.inventory.x"
                            },
                            {
                                "type": "rotate",
                                "id": "inventoryDisplayExitButtonText",
                                "style": {
                                    "height": "100%"
                                },
                                "angle": 90,
                                "centerX": 70.25,
                                "centerY": 37.75,
                                "component": {
                                    "type": "text",
                                    "style": {
                                        "width": "fitContent"
                                    },
                                    "text": "interface.close"
                                }
                            }
                        ]
                    },
                    "action": {
                        "type": "closeMenu"
                    }
                }
            ]
        }
    }
}