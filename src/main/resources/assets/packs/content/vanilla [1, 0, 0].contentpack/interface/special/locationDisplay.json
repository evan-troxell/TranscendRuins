{
    "metadata": {
        "identifier": "TranscendRuins:locationDisplay"
    },
    "attributes": {
        "style": {
            "locationDisplay": {
                "x": "100%",
                "y": 0,
                "origin": ["100%", 0],
                "propagateEvents": false,

                "width": "32.5%",
                "height": "100%",

                "borderLeft": {
                    "width": 2,
                    "color": [64, 64, 64],
                    "style": "solid"
                },
                "backgroundColor": [160, 160, 160, 128],

                "gapHeight": 20,
                "paddingHorizontal": 20,

                "paddingVertical": 20
            },

            "#locationDisplayNameText": {

                "height": "100",
                "fontSize": 45,
                "lineHeight": 1.5,
                "textAlign": "center"
            },
            "#locationDisplayDescriptionText": {
                "height": "fitContent",
                "fontSize": 25,
                "textAlign": "left"
            },

            "#locationDisplayTravelButton": {

                "x": "50%",
                "origin": ["50%", 0],

                "width": 135,
                "height": 35,
                "padding": 5,
                "fontSize": 25,

                "border": {
                    "width": 2,
                    "color": [64, 64, 64],
                    "style": "solid"
                },
                "backgroundColor": [160, 160, 160, 128],

                "textAlign": "center"
            },
            "#locationDisplayTravelButton:hover": {
                "backgroundColor": [128, 128, 128, 160],
                "borderColor": [80, 200, 220, 192]
            },
            "#locationDisplayTravelButton:active": {
                "color": [192, 192, 192],
                "backgroundColor": [96, 96, 96, 192]
            }
        },
        "body": {
            "type": "locationDisplay",
            "id": "locationDisplay",

            "components": {
                "nameText": {
                    "type": "text",
                    "id": "locationDisplayNameText"
                },
                "descriptionText": {
                    "type": "text",
                    "id": "locationDisplayDescriptionText"
                },
                "travelButton": {
                    "type": "button",
                    "id": "locationDisplayTravelButton",
                    "component": "global.travel"
                }
            }
        }
    }
}